---
const { post } = Astro.props;
---

<div>
  <a href={post.url}>
    <img
      class='w-full mb-6'
      src={post.frontmatter.heroImage}
      alt={post.frontmatter.description}
    />
  </a>
  <div class='mb-2 md:mb-4 flex flex-row justify-between items-start font-mono'>
    <a href={post.url} class='text-2xl transition'>
      {post.frontmatter.title}
    </a>
    <time datetime={post.frontmatter.pubDate} class='text-base'>
      {new Date(post.frontmatter.pubDate).toLocaleDateString('en-us', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
      })}
    </time>
  </div>
  <p class='text-sm md:text-base font-sans'>
    {post.frontmatter.description}
  </p>
</div>

<style>
  a:hover {
    color: var(--color-light-green);
  }
</style>