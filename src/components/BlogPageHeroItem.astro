---
import { Image } from '@astrojs/image/components';
const { post } = Astro.props;
---

<div>
  <a href={post.url}>
    <Image
      class='w-full mb-6'
      width={720}
      height={360}
      src={post.data.heroImage}
      alt={post.data.title}
    />
  </a>
  <div class='mb-2 md:mb-6 flex flex-row justify-between items-start font-mono'>
    <a href={`/blog/${post.slug}`} class='text-xl md:text-3xl transition'>
      {post.data.title}
    </a>
    <time datetime={post.data.pubDate} class='text-base text-neutral-400'>
      {new Date(post.data.pubDate).toLocaleDateString('en-us', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
      })}
    </time>
  </div>
  <p class='text-sm md:text-base font-sans'>
    {post.data.description}
  </p>
</div>

<style>
  a:hover {
    color: var(--color-light-green);
  }
</style>