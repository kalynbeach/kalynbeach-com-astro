---
const { post } = Astro.props;
---

<div class='flex flex-row justify-between items-center'>
  <a href={post.url} class='hidden md:inline-block mr-5 basis-5/12 md:basis-1/3 flex-shrink-0'>
    <img
      class=''
      src={post.frontmatter.heroImage}
      alt={post.frontmatter.description}
    />
  </a>
  <div class='flex-1 flex flex-col justify-center items-baseline font-mono'>
    <a href={post.url} class='text-lg md:text-2xl mb-1 md:mb-3 transition'>
      {post.frontmatter.title}
    </a>
    <time datetime={post.frontmatter.pubDate} class='text-xs mb-2 md:mb-3 text-neutral-500'>
      {new Date(post.frontmatter.pubDate).toLocaleDateString('en-us', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
      })}
    </time>
    <p class='mb-0 font-sans text-xs md:text-sm'>
      {post.frontmatter.description}
    </p>
  </div>
</div>

<style>
  a:hover {
    color: var(--color-light-green);
  }
</style>