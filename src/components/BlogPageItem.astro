---
import { Image } from '@astrojs/image/components';
const { post } = Astro.props;
---

<div class='flex flex-row justify-between items-center'>
  <a href={post.url} class='hidden md:inline-block mr-5 basis-5/12 md:basis-1/3 flex-shrink-0'>
    <Image
      class='w-full mb-6'
      width={720}
      height={360}
      src={post.data.heroImage}
      alt={post.data.title}
    />
  </a>
  <div class='flex-1 flex flex-col justify-center items-baseline font-mono'>
    <a href={`/blog/${post.slug}`} class='text-lg md:text-2xl mb-1 md:mb-3 transition'>
      {post.data.title}
    </a>
    <time datetime={post.data.pubDate} class='text-xs mb-2 md:mb-3 text-neutral-400'>
      {new Date(post.data.pubDate).toLocaleDateString('en-us', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
      })}
    </time>
    <p class='mb-0 font-sans text-xs md:text-sm'>
      {post.data.description}
    </p>
  </div>
</div>

<style>
  a:hover {
    color: var(--color-light-green);
  }
</style>