---
const { post } = Astro.props;
---

<div class='flex flex-row justify-between'>
  <a href={post.url} class='mr-4 basis-5/12 md:basis-1/3 flex-shrink-0'>
    <img
      class=''
      src={post.frontmatter.heroImage}
      alt={post.frontmatter.description}
    />
  </a>
  <div class='flex-1 flex flex-col justify-center items-baseline font-mono'>
    <time datetime={post.frontmatter.pubDate} class='text-sm mb-2'>
      {new Date(post.frontmatter.pubDate).toLocaleDateString('en-us', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
      })}
    </time>
    <a href={post.url} class='text-lg md:text-xl mb-2 md:mb-3 transition'>
      {post.frontmatter.title}
    </a>
    <p class='font-sans text-xs md:text-sm'>
      {post.frontmatter.description}
    </p>
  </div>
</div>

<style>
  a:hover {
    color: var(--color-light-green);
  }
</style>