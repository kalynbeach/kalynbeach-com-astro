---
import { Image } from '@astrojs/image/components';
const { post, isHero } = Astro.props;
---

<div class:list={['blog-page-item', isHero ? '' : 'flex flex-row justify-between items-center']}>
  <a href={`/blog/${post.slug}`} class:list={['hidden', isHero ? 'md:block' : 'md:inline-block mr-5 basis-5/12 md:basis-1/3 flex-shrink-0']}>
    <Image
      class='w-full'
      width={720}
      height={360}
      src={post.data.heroImage}
      alt={post.data.title}
    />
  </a>
  <div class:list={['flex-1 flex font-mono', isHero ? 'my-4 flex-row justify-between items-center' : 'flex-col justify-center items-baseline']}>
    <a href={`/blog/${post.slug}`} class:list={['transition hover:text-kb-green-light', isHero ? 'my-4 text-xl md:text-3xl' : 'text-lg md:text-2xl mb-2 md:mb-3']}>
      {post.data.title}
    </a>
    <time datetime={post.data.pubDate} class:list={['text-neutral-400', isHero ? 'text-sm' : 'text-xs mb-2 md:mb-3']}>
      {new Date(post.data.pubDate).toLocaleDateString('en-us', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
      })}
    </time>
    { 
      !isHero && (
        <p class='mb-0 font-sans text-xs md:text-sm'>
          {post.data.description}
        </p>
      )
    }
  </div>
  { 
    isHero && (
      <p class='mb-0 font-sans text-sm md:text-lg'>
        {post.data.description}
      </p>
    )
  }
</div>

