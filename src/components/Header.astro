---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../config';
---

<header class='m-0 p-0 basis-36 flex flex-row justify-between items-center sticky top-0 dark:bg-night-900'>
	<a href='/'>
		<h2 class='text-xl font-mono'>{SITE_TITLE}</h2>
	</a>
	<nav>
		<HeaderLink href='/about'>About</HeaderLink>
		<HeaderLink href='/blog'>Blog</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
